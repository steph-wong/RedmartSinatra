<h2>products List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% @brands.each do |brand| %>
        <tr>
            <td>
                <%= brand[:id] %>
            </td>
            <td>
                <%= brand[:name] %>
            </td>
            <td>
                <a href="brands/<%= brand[:id] %>">View</a> |

                <a href="brands/<%= brand[:id] %>/edit">Edit</a> |

                <form action="/brands/<%= brand[:id] %>" method="post">
                  <input type="hidden" name="_method" value="Delete">
                  <input type="submit" value="Delete">
                </form>

            </td>
        </tr>
        <% end %>
      </tbody>
    </table>
